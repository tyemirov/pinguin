# copy this file to .env.pinguin and replace placeholder values before running docker compose

# Pinguin reads YAML config from this path inside the container.
PINGUIN_CONFIG_PATH=/configs/config.yml

DATABASE_PATH=/app/data/pinguin.db
GRPC_AUTH_TOKEN=change-me
LOG_LEVEL=INFO
MAX_RETRIES=3
RETRY_INTERVAL_SEC=30
CONNECTION_TIMEOUT_SEC=5
OPERATION_TIMEOUT_SEC=30

# Hex-encoded 32-byte key. Generate and paste: `openssl rand -hex 32`
MASTER_ENCRYPTION_KEY=change-me

# Tenant bootstrap (used by configs/config.yml via ${VAR} expansion)
TENANT_LOCAL_DOMAIN_PRIMARY=localhost
TENANT_LOCAL_DOMAIN_SECONDARY=127.0.0.1
TENANT_LOCAL_ADMIN_EMAIL=admin@localhost
# Optional second admin email; leave blank to allow only the primary admin.
TENANT_LOCAL_ADMIN_EMAIL_2=
TENANT_LOCAL_GOOGLE_CLIENT_ID=your-google-web-client-id.apps.googleusercontent.com
TENANT_LOCAL_TAUTH_BASE_URL=http://localhost:8081
TENANT_LOCAL_SMTP_HOST=smtp.localhost
TENANT_LOCAL_SMTP_PORT=1025
TENANT_LOCAL_SMTP_USERNAME=smtp-user
TENANT_LOCAL_SMTP_PASSWORD=smtp-pass
TENANT_LOCAL_FROM_EMAIL=noreply@localhost

# Must match TAuth's `APP_JWT_SIGNING_KEY` from `.env.tauth`
TAUTH_SIGNING_KEY=change-me

# Optional: leave blank to disable SMS
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=
