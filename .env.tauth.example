# copy this file to .env.tauth and replace placeholder values before running docker compose
APP_LISTEN_ADDR=:8081
APP_GOOGLE_WEB_CLIENT_ID=your-google-web-client-id.apps.googleusercontent.com
APP_JWT_SIGNING_KEY=replace-with-secure-shared-key
APP_COOKIE_DOMAIN=localhost
APP_ENABLE_CORS=true
APP_CORS_ALLOWED_ORIGINS="http://localhost:4173,http://127.0.0.1:4173,https://accounts.google.com"
APP_DEV_INSECURE_HTTP=true
# Used by the `dev` docker-compose profile (TAuth config lives in `configs/tauth/config.yaml`).
TAUTH_CONFIG_FILE=/config/config.yaml
# uncomment to persist refresh tokens in SQLite or Postgres
# APP_DATABASE_URL=sqlite://file:/var/lib/tauth/auth.db
